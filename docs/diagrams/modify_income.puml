@startuml
participant "<<class>>\nFinTrack" as FT
participant "<<class>>\nParser" as P
participant ":FinanceManager" as FM
participant "<<class>>\nUi" as UI

FT -> UI: waitForInput()
UI --> FT: "modify-income 3 a/5200 c/SALARY"

FT -> P: returnFirstWord(input)
P --> FT: "modify-income"

FT -> P: parseModifyIncomeIndex(input)
P -> P: extract index from args
P -> P: validate index is positive number
P --> FT: index

FT -> FM: getIncome(index)
FM --> FT: oldIncome

FT -> P: parseModifyIncomeWithDefaults(input, oldIncome)
P -> P: parse optional fields (amount, category, date, description)
P -> P: merge with old income values for unspecified fields
P -> P: validate no stray text, non-finite amounts, zero amounts
P --> FT: newIncome

FT -> FM: modifyIncome(index, newIncome)

FM -> FM: oldIncome = deleteIncome(index)

alt index is invalid or list is empty
    FT -> UI: printError(message)
else index is valid
    FM -> FM: addIncome(newIncome)

    opt adding new income fails
        FM -> FM: restore old income
        FT -> UI: printError(message)
    end

    FT -> UI: printIncomeModified(newIncome, index)
end
@enduml
