        activate FM
        FM --> FT
        deactivate FM

        FT -> FM: getBudgetForCategory(category)
        activate FM
        FM --> FT
        deactivate FM

    opt isOverBudget == true

        FT -> UI: printBudgetExceededWarning(...)
        activate UI
        deactivate UI
    end
end

FT -> UI: printExit()
activate UI
deactivate UI

deactivate FT
@enduml
