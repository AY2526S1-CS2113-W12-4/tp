@startuml UiInputCycle
skinparam stereotypeFontStyle normal

participant ":Caller Loop" as Caller
participant "<u>Ui</u>" as Ui
participant "<u>Console (System.out)</u>" as Console
participant ":Scanner\n(System.in)" as Scanner
participant "<u>Logger</u>" as Logger

Caller -> Ui : Ui::waitForInput()
Ui -> Console : Console::displayPrompt()
Ui -> Scanner : nextLine()
alt input available
    Ui --> Caller : trimmed line
else input unavailable
    Scanner --> Ui : exception
    Ui -> Logger : Logger::severe(error)
    Ui --> Caller : EXIT_COMMAND
end
@enduml
